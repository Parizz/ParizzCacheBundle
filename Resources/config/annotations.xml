<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="Parizz_cache.event_listener.cache_listener.class">Parizz\CacheBundle\EventListener\CacheListener</parameter>
    </parameters>

    <services>
        <service id="Parizz_cache.event_listener.cache_listener" class="%Parizz_cache.event_listener.cache_listener.class%">
            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" />
            <tag name="kernel.event_listener" event="kernel.response" method="onKernelResponse" />
            <argument type="service" id="annotation_reader" />
            <argument type="service" id="service_container" />
        </service>
    </services>
</container>
