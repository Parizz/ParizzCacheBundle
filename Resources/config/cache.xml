<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="parizz_cache.factory.class">Parizz\CacheBundle\Cache\CacheFactory</parameter>
        <parameter key="parizz_cache.factory.options" type="collection" />
    </parameters>

    <services>
        <service id="parizz_cache.factory" class="%parizz_cache.factory.class%">
            <argument>%parizz_cache.factory.options%</argument>
        </service>
    </services>
</container>
